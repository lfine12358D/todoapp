@model todoApp.Models.toDo

@{
    ViewBag.Title = "Edit";
}
<div class="content-wrapper">
    <h1><span class="label label-warning">My ToDo List - Edit</span></h1>
    <p class="padding"></p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset><legend></legend>
        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.priorityTypeId, "Priority")
        </div>
        <div class="dropdown theme-dropdown">
            @Html.DropDownList("priorityTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.priorityTypeId)
        </div>

        <div class="editor-label">
            @Html.Label("RemindMe Date (12/12/1999) ")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.remindMeDate)
            @Html.ValidationMessageFor(model => model.remindMeDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.toDoDesc)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.toDoDesc, new {@cols="40" })
            @Html.ValidationMessageFor(model => model.toDoDesc)
        </div>

        <p class="padding">
            <input type="submit" value="Save" class="btn btn-sm btn-warning"/>
        </p>
    </fieldset>
}

<div>
     @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-info" })
</div>

